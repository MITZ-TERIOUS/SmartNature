<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Dialog.NoTitleBar" parent="@android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="GardenHint">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/hintsize</item>
		<item name="android:background">#44000000</item>
		<item name="android:focusable">false</item>
		<item name="android:paddingLeft">6sp</item>
		<item name="android:paddingTop">3sp</item>
		<item name="android:paddingRight">6sp</item>
		<item name="android:paddingBottom">3sp</item>
		<item name="android:lineSpacingExtra">1.5sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">#BB000000</item>
		<item name="android:shadowRadius">2.5</item>
	</style>

	<style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
		<item name="android:background">#ffd4d4d4</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/secondary_text_light</item>
		<item name="android:textSize">14sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">5sp</item>
	</style>
	<style name="Widget.Button.Custom" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/btn_custom</item>
		<item name="android:shadowColor">#e0ffffff</item>
		<item name="android:shadowDy">1.5</item>
		<item name="android:shadowRadius">1.5</item>
	</style>
</resources>
