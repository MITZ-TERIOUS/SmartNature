<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView
		android:id="@+id/logo"
		android:visibility="gone"
		android:text="@string/app_name"
		android:textSize="30sp"
		android:textStyle="bold"
		android:layout_gravity="center_horizontal"
		android:padding="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:padding="3dp"
		android:layout_marginTop="3dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/new_garden"
			android:text="Map out your garden"
			android:textSize="16sp"
			android:drawableTop="@android:drawable/ic_menu_add"
			android:layout_weight="1"
			android:layout_margin="2dp"
			android:layout_width="0px"
			android:layout_height="fill_parent" />

		<Button
			android:id="@+id/search_encyclopedia"
			android:text="Plant encyclo-pedia"
			android:textSize="16sp"
			android:drawableTop="@android:drawable/ic_menu_search"
			android:layout_weight="1"
			android:layout_margin="2dp"
			android:layout_width="0px"
			android:layout_height="fill_parent" />

	<Button
			android:id="@+id/find_garden"
			android:text="Find existing garden"
			android:textSize="16sp"
			android:drawableTop="@android:drawable/ic_menu_slideshow"
			android:layout_weight="1"
			android:layout_margin="2dp"
			android:layout_width="0px"
			android:layout_height="fill_parent" />

	</LinearLayout>

	<TextView
		android:text="@string/garden_list_title"
		android:background="#ffd4d4d4"
		android:gravity="center_vertical"
		android:textAppearance="?android:listSeparatorTextViewStyle"
		android:paddingLeft="5sp"
		android:layout_width="fill_parent"
		android:layout_height="25dp" />

	<ListView
		android:id="@+id/android:list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

</LinearLayout>
