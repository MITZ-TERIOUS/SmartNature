<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/linearLayout2"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<EditText
			android:maxLength="140"
			android:id="@+id/new_plant_name"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:hint="Enter new plant name" 
			/>
		<Button
			android:id="@+id/addPlantButton"
			android:text="Add Plant"
			android:textSize="16sp"

	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			/>
	</LinearLayout>
	<TextView
		android:text="List of Plants"
		android:background="#ffd4d4d4"
		android:gravity="center_vertical"
		android:textAppearance="?android:listSeparatorTextViewStyle"
		android:paddingLeft="5sp"
		android:layout_width="fill_parent"
		android:layout_height="25dp" 
		/>

	<ListView
		android:id="@+id/android:list"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		/>


	


</LinearLayout>
