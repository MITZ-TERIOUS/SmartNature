<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="vertical"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/et_plot_name"
			android:hint="Enter in plot name"
			android:layout_marginTop="4dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<TextView
			android:text="Choose plot shape"
			android:paddingLeft="4dp"
			android:textSize="15sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<ScrollView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<RadioGroup
				android:id="@+id/rg_shape"
				android:orientation="vertical"
				android:layout_marginRight="10dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<RadioButton
					android:id="@+id/rb_rectangle"
					android:checked="true"
					android:text="Rectangle"
					android:textSize="17sp"
					android:paddingLeft="45dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />

				<RadioButton
					android:id="@+id/rb_ellipse"
					android:text="Oval"
					android:textSize="17sp"
					android:paddingLeft="45dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />

				<RadioButton
					android:id="@+id/rb_custom"
					android:text="Polygon"
					android:textSize="17sp"
					android:paddingLeft="45dp"
					android:layout_marginBottom="3dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />

			</RadioGroup>	
		</ScrollView>
		
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:background="#e6cbcbcb"
		android:paddingTop="5dp"
		android:paddingLeft="1dp"
		android:paddingRight="1dp"
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/b_add_confirm"
			android:text="@string/alert_dialog_ok"
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<Button
			android:id="@+id/b_add_cancel"
			android:text="@string/alert_dialog_cancel"
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>
