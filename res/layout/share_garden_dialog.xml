<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:paddingLeft="6dp"
	android:paddingRight="6dp"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<EditText
		android:id="@+id/garden_password"
		android:hint="Set optional password"
		android:inputType="textPassword"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<CheckBox
		android:id="@+id/garden_permissions"
		android:text="Only I can edit the garden"
		android:textColor="@android:color/white"
		android:textSize="18sp"
		android:paddingLeft="45dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<CheckBox
		android:id="@+id/garden_permissions2"
		android:enabled="false"
		android:text="People without password can still view this garden"
		android:textColor="@android:color/white"
		android:textSize="18sp"
		android:paddingLeft="45dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>
