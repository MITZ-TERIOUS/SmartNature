<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:paddingLeft="6dp"
	android:paddingTop="6dp"
	android:paddingRight="6dp"
	android:paddingBottom="3dp"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<EditText
		android:id="@+id/garden_password"
		android:hint="Set optional password"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<CheckBox
		android:id="@+id/garden_permissions2"
		android:enabled="false"
		android:text="Password not needed to view garden"
		android:textSize="18sp"
		android:paddingLeft="45dp"
		android:paddingRight="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<CheckBox
		android:id="@+id/garden_permissions"
		android:text="Only I can edit the garden"
		android:textSize="18sp"
		android:paddingLeft="45dp"
		android:paddingRight="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<CheckBox
		android:id="@+id/garden_permissions3"
		android:text="Upload online periodically"
		android:textSize="18sp"
		android:paddingLeft="45dp"
		android:paddingRight="5dp"
		android:layout_marginBottom="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/share_confirm"
			android:text="Share"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<Button
			android:id="@+id/share_cancel"
			android:text="Cancel"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>
