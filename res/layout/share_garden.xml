<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:paddingLeft="6dp"
		android:paddingTop="6dp"
		android:paddingRight="6dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:text="Password allows others to edit this garden"
			android:layout_marginBottom="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<EditText
			android:id="@+id/garden_password"
			android:hint="Set optional password"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<CheckBox
			android:id="@+id/garden_permissions"
			android:text="Allow anyone to search and view this garden"
			android:textSize="18sp"
			android:paddingLeft="45dp"
			android:paddingRight="5dp"
			android:layout_marginTop="4dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:background="#e6cbcbcb"
		android:paddingTop="5dp"
		android:paddingLeft="1dp"
		android:paddingRight="1dp"
		android:layout_marginTop="12dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/share_confirm"
			android:text="Share"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<Button
			android:id="@+id/share_cancel"
			android:text="Cancel"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>
