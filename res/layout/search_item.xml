<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/singleResult"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10px"
>
	
		
		<ImageView android:id="@+id/searchPic"
		android:layout_width="75px"
		android:layout_height="75px"
		android:src="@drawable/icon"
		/>
		<LinearLayout android:id="@+id/textContent"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:background="#ffffff"
		android:orientation="vertical"
		>
			<TextView android:id="@+id/name"
			android:linksClickable="true"
			android:layout_width="fill_parent"
			android:layout_height="22px"
			android:text="Name"
			android:gravity="center_vertical"
			android:textSize="18px"
			android:layout_marginLeft="10px"
			android:layout_marginRight="10px"
			android:textColor="#000000"
			></TextView>

			<TextView android:id="@+id/altNames"
			android:linksClickable="true"
			android:layout_width="fill_parent"
			android:layout_height="50px"
			android:text="This is a sample alternate name box"
			android:textSize="14px"
			android:layout_marginLeft="10px"
			android:layout_marginRight="10px"
			android:layout_marginTop="5px"
			android:textColor="#000000"
			></TextView>
			
		</LinearLayout>
		<TextView android:id="@+id/linkURL"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:visibility="gone"
		/>
</LinearLayout>