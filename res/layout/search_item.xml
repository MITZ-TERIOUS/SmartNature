<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/singleTweet"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
>
	
		
		<ImageView android:id="@+id/searchPic"
		android:layout_width="75px"
		android:layout_height="75px"
		android:src="@drawable/icon"
		/>
		<LinearLayout android:id="@+id/textContent"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:background="#ffffff"
		android:orientation="vertical"
		>
			<TextView android:id="@+id/name"
			android:linksClickable="true"
			android:layout_width="fill_parent"
			android:layout_height="16px"
			android:text="UserName"
			android:gravity="center_vertical"
			android:textSize="14px"
			android:layout_marginLeft="10px"
			android:layout_marginRight="10px"
			android:textColor="#000000"
			></TextView>

			<TextView android:id="@+id/altNames"
			android:linksClickable="true"
			android:layout_width="fill_parent"
			android:layout_height="50px"
			android:text="This is a sample tweet. www.twitter.com It is a test. I do hope it works.This is a sample tweet. It is a test. I do hope it works."
			android:textSize="14px"
			android:layout_marginLeft="10px"
			android:layout_marginRight="10px"
			android:layout_marginTop="5px"
			android:textColor="#000000"
			></TextView>
			
		</LinearLayout>
</LinearLayout>