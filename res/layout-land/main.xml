<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:padding="10dp"
		android:gravity="center"
		android:layout_height="fill_parent">

		<TextView
			android:id="@+id/logo"
			android:text="@string/app_name"
			android:textSize="26sp"
			android:textStyle="bold"
			android:layout_margin="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<Button
			android:id="@+id/new_garden"
			android:text="@string/new_garden"
			android:textSize="16sp"
			android:layout_margin="5dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<Button
			android:id="@+id/search_encyclopedia"
			android:text="@string/search_encyclopedia"
			android:textSize="16sp"
			android:layout_margin="5dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

	<Button
			android:id="@+id/find_garden"
			android:text="Find existing garden"
			android:textSize="16sp"
			android:layout_margin="5dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:text="@string/garden_list_title"
			android:background="#ffd4d4d4"
			android:textAppearance="?android:listSeparatorTextViewStyle"
			android:gravity="center_vertical"
			android:paddingLeft="5sp"
			android:layout_width="fill_parent"
			android:layout_height="25dp" />

		<ListView
			android:id="@+id/android:list"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

	</LinearLayout>

</LinearLayout>
