<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="edu.berkeley.cs160.smartnature"
	android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="4" />

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:theme="@android:style/Theme.Light">
		<activity android:name=".StartScreen"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".GlobalSettings"
			android:label="@string/global_prefs_name">
			<intent-filter>
				<category android:name="android.intent.category.PREFERENCE" />
			</intent-filter>
		</activity>

		<activity android:name=".GardenScreen"
			android:label="@string/app_name">
		</activity>

		<activity android:name=".ShareGarden"
			android:theme="@style/Theme.Dialog.NoTitleBar">
		</activity>
		
		<activity android:name=".AddGarden"
			android:theme="@style/Theme.Dialog.NoTitleBar">
		</activity>
		
		<activity android:name=".EditScreen"
			android:label="@string/app_name">
		</activity>
		
		<activity android:name=".ColorPicker"></activity>

	</application>
</manifest>